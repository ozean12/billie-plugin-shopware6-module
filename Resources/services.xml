<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Event Subscribers -->
        <service id="billie_payment.subscriber.template_registration" class="BilliePayment\Subscriber\TemplateRegistration">
            <argument>%billie_payment.plugin_dir%</argument>
            <argument type="service" id="template" />
            <tag name="shopware.event_subscriber" />
        </service>
        <service id="billie_payment.subscriber.checkout" class="BilliePayment\Subscriber\Checkout">
            <tag name="shopware.event_subscriber"/>
            <argument type="service" id="billie_payment.api" />
        </service>
        <service id="billie_payment.subscriber.order" class="BilliePayment\Subscriber\Order">
            <tag name="shopware.event_subscriber" />
            <argument type="service" id="billie_payment.api" />
        </service>

        <!-- Example Payment Service -->
        <service id="billie_payment.payment_service" class="BilliePayment\Components\Payment\Service" />
        
        <!-- Utils & Helpers -->
        <service id="billie_payment.utils" class="BilliePayment\Components\Utils" />
        
        <!-- API Componenty -->
        <service id="billie_payment.helper" class="BilliePayment\Components\Api\Helper">
            <argument type="service" id="billie_payment.utils" />
        </service>
        <service id="billie_payment.factory" class="BilliePayment\Components\Api\CommandFactory">
            <argument type="service" id="billie_payment.utils" />
        </service>
        <service id="billie_payment.api" class="BilliePayment\Components\Api\Api">
            <argument type="service" id="billie_payment.helper" />
            <argument type="service" id="billie_payment.utils" />
            <argument type="service" id="billie_payment.factory" />
        </service>
    </services>
</container>