<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Register TemplateRegistration subscriber -->
        <service id="billie_payment.subscriber.template_registration" class="BilliePayment\Subscriber\TemplateRegistration">
            <argument>%billie_payment.plugin_dir%</argument>
            <argument type="service" id="template"/>
            <tag name="shopware.event_subscriber"/>
        </service>
        <!-- Example Payment Service -->
        <service id="billie_payment.payment_service"
                 class="BilliePayment\Components\BilliePayment\PaymentService">
        </service>
    </services>
</container>